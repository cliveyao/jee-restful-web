<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.howiefh.jeews.test.dao.TestUserDao">
  <!-- 加keyProperty和useGenerateKeys属性可以使返回主键值 -->
  <insert id="save" useGeneratedKeys="true" keyProperty="id">
    insert into test_user (id,username,password,salt,roles,locked)
    values (#{id},#{username},#{password},#{salt},#{roles},#{locked})
  </insert>
  <select id="findOne" resultType="TestUser">
    select * from test_user where id = #{id}
  </select>
  <select id="count" resultType="long">
    select count(0) from test_user
  </select>
  <select id="findAll" resultType="TestUser">
    select * from test_user
  </select>
  <select id="findAllByPage" resultType="TestUser">
    select * from test_user order by id limit #{offset}, #{pageSize}
  </select>
  <select id="findByName" resultType="TestUser">
    select * from test_user where username like #{username}
  </select>
  <update id="update">
    update test_user
    <set>
      <if test="username != null">username=#{username},</if>
      <if test="password != null">password=#{password},</if>
      <if test="roles != null">roles=#{roles},</if>
      <if test="locked != null">locked=#{locked}</if>
    </set>
    where id = #{id}
  </update>
  <delete id="delete">
    delete from test_user
    where id = #{id}
  </delete>
  <delete id="deleteAll" parameterType="java.util.List">
    delete from test_user
    where id in 
    <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
    #{item}
    </foreach>
  </delete>
</mapper>